{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext",
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}